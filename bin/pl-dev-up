#!/bin/bash

# set -e


PROJECT_DIR="$(dirname "$(dirname "${BASH_SOURCE[0]}")")"
COMPOSE_FILE="$PROJECT_DIR/docker/docker-compose.yml"
OVERRIDE_FILE="$PROJECT_DIR/docker/docker-compose.override.yml"

if [ ! -f "$OVERRIDE_FILE" ]; then
    echo "Error: $OVERRIDE_FILE not found"
    exit 0
fi

docker compose -f "$COMPOSE_FILE" -f "$OVERRIDE_FILE" --profile dev up -d